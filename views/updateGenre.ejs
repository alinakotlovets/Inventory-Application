<html lang="en">
<head>
    <title>Book Inventory Update Genre</title>
    <link rel="stylesheet" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
<%- include("component/mobileMenu.ejs") %>
<%- include("component/navbar.ejs") %>
<%- include("component/formConfirmUpdateAndDelete.ejs") %>
<div class="overlay"></div>
<div class="container">
    <div class="content-form-box">
        <form class="add-update-form">
            <label for="genreName">Genre:</label>
            <input type="text" name="genreName" value="<%= genreName %>" id="genreName" required>
            <p class="validation-error-messages"></p>
            <div class="flex-center-box">
                <button class="submit-form-btn" type="button" id="edit-genre-submit" data-genre-id="<%= genreId %>">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
</body>
<script src="/js/confirmForm.js"></script>
</html>