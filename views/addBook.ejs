<html lang="en">
<head>
    <title>Book Inventory Add book</title>
    <link rel="stylesheet" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
<%- include("component/mobileMenu.ejs") %>
<%- include("component/navbar.ejs") %>
<div class="container">
    <div class="content-form-box">
        <form class="add-update-form" action="/add" method="post" enctype="multipart/form-data">
            <label for="bookName">Book name:</label>
            <input type="text" name="bookName" value="<%= bookName %>" id="bookName" required>
            <label for="description">Book description:</label>
            <input type="text" id="description" value="<%= description %>" name="description">
            <label for="bookImg">Book image:</label>
            <input type="file" id="bookImg" name="bookImg" alt="book image" required>
            <label for="publicationDate">Publication date:</label>
            <input type="date" id="publicationDate" value="<%= publicationDate %>" name="publicationDate">
            <label for="price">Price:</label>
            <input type="number" value="<%= price %>" id="price" name="price">
            <label for="author">Author:</label>
            <select name="author" id="author">
                <% authors.forEach(author => { %>
                    <option value="<%= author.author_id %>" <%= author.author_id == locals.author ? "selected" : "" %>>
                        <%= author.author_first_name %> <%= author.author_last_name %>
                    </option>
                <% }) %>
            </select>
            <label for="genres">Genres:</label>
            <div class="genres-group">
                <% genres.forEach(genre => { %>
                    <label class="genre-item">
                        <input
                                type="checkbox"
                                name="genres[]"
                                value="<%= genre.genre_id %>"
                                <%= genresSelected && genresSelected.includes(String(genre.genre_id)) ? "checked" : "" %>
                        >
                        <span><%= genre.genre_name %></span>
                    </label>
                <% }) %>
            </div>
            <%- include("component/errors.ejs") %>
            <div class="flex-center-box">
                <button class="submit-form-btn" type="submit"> Submit</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>
