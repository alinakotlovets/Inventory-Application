<html lang="en">
<head>
    <title>Book Inventory Update Book</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<%- include("component/navbar.ejs") %>
<%- include("component/formConfirmUpdateAndDelete.ejs") %>
<div class="overlay"></div>
<div class="container">
    <div class="content-form-box">
        <form class="add-update-form" id="editBookForm">
            <label for="bookName">Book name:</label>
            <input type="text" name="bookName" value="<%= bookName %>" id="bookName" required>
            <label for="description">Book description:</label>
            <input type="text" id="description" value="<%= bookDescription %>" name="description">
            <p>Old image:</p>
            <% if(bookImg) { %>
                <img src="<%= bookImg %>" alt="<%= bookName %>" style="max-width:200px;">
            <% } %>
            <label for="bookImg">Choose new book image:</label>
            <input type="file" id="bookImg" name="bookImg" alt="book image">
            <label for="publicationDate">Publication date</label>
            <input type="date" id="publicationDate" value="<%= bookPublication %>" name="publicationDate">
            <label for="price">Price:</label>
            <input type="number" id="price" value="<%= bookPrice %>" name="price">
            <label for="author">Author:</label>
            <select name="author" id="author">
                <% authors.forEach(author => { %>
                    <option value="<%= author.author_id %>"
                            <%= author.author_id === bookAuthorId ? 'selected' : '' %>>
                        <%= author.author_first_name %> <%= author.author_last_name %>
                    </option>
                <% }) %>
            </select>
            <label>Genres:</label>
            <div class="genres-group">
                <% genres.forEach(genre => { %>
                    <label class="genre-item">
                        <input
                                type="checkbox"
                                name="genres[]"
                                value="<%= genre.genre_id %>"
                                <%= bookGenreIds.includes(genre.genre_id) ? "checked" : "" %>
                        >
                        <span><%= genre.genre_name %></span>
                    </label>
                <% }) %>
            </div>
            <p class="validation-error-messages"></p>
            <div class="flex-center-box">
                <button class="submit-form-btn" id="edit-book-submit" data-book-id="<%= bookId %>" type="button">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
</body>
<script src="/js/confirmForm.js"></script>
</html>
