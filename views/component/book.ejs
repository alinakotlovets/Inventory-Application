<li class="book-list-item" id="book-<%= book.book_id %>">
    <div class="book-info-box">
        <% if(book.book_img) { %>
            <div class="flex-center">
                <img class="book-img" src="<%= book.book_img %>" alt="<%= book.book_name %> image">
            </div>
        <% } %>
        <h3><%= book.book_name %></h3>
        <h3><%= book.book_description %></h3>
        <% if(book.publication_date) { %>
            <h4>Published date: <%= book.formattedDate %> </h4>
        <% } %>
        <h3>Genres:</h3>
        <ul>
            <% book.genres.forEach((genre) => { %>
                <li><%= genre %></li>
            <% }); %>
        </ul>
        <h3><%= book.author_first_name %>  <%= book.author_last_name %></h3>
        <% if(book.price) { %>
            <h3>Price: <%= book.price %>$ </h3>
        <% } %>
    </div>
    <div class="update-delete-btn-box">
        <a class="update-btn" href="/update/<%= book.book_id %>">Update</a>
        <button class="delete-book-btn delete-btn" data-book-id="<%= book.book_id %>">Delete</button>
    </div>
</li>
